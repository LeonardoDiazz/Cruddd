<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="792.0" prefWidth="762.0" stylesheets="@../../../Styles/Stylee.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmc.gestor.HelloController">
    <left>
        <VBox spacing="10" BorderPane.alignment="BOTTOM_LEFT">
            <Button onAction="#agregarTarea" styleClass="button-agregar" text="Agregar" />
            <Button onAction="#eliminarTarea" styleClass="button-eliminar" text="Eliminar" />
            <Button onAction="#editarTarea" styleClass="button-editar" text="Editar" />
            <Button onAction="#limpiarCampos" styleClass="button-limpiar" text="Limpiar" textAlignment="RIGHT" />

            <HBox prefHeight="42.0" prefWidth="762.0" spacing="10" />
            <TableView fx:id="tablaTareas" prefHeight="201.0" prefWidth="632.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colTitulo" prefWidth="150" text="Título" />
                    <TableColumn fx:id="colDescripcion" prefWidth="200" text="Descripción" />
                    <TableColumn fx:id="colPrioridad" prefWidth="100" text="Prioridad" />
                    <TableColumn fx:id="colFechaLimite" prefWidth="120" text="Fecha Límite" />
                </columns>
            </TableView>
        </VBox>
    </left>
   <top>
        <GridPane hgap="10" prefHeight="287.0" prefWidth="762.0" vgap="10" BorderPane.alignment="CENTER">
            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtId" GridPane.columnIndex="1" />

            <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtTitulo" prefHeight="27.0" prefWidth="148.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextArea fx:id="txtDescripcion" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Prioridad:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="cmbPrioridad" prefHeight="35.0" prefWidth="123.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Fecha Límite:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <DatePicker fx:id="dateFechaLimite" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
   </top>
</BorderPane>
